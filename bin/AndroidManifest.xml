<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.asteroides"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="17" />
    
    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
     
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/TemaAsteroides">
        <!-- android:hardwareAccelerated="false" -->
        <activity
            android:name="com.example.asteroides.Asteroides"
            android:label="@string/app_name" >
            <!-- android:launchMode="singleTask" -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.asteroides.AcercaDe" android:label="@string/acercadialog" android:theme="@android:style/Theme.Dialog"></activity>
        <activity android:name="com.example.asteroides.Preferencias" android:label="@string/preferencias"></activity>
        <activity android:name="com.example.asteroides.Puntuaciones" android:label="@string/puntuacion"></activity>
        <activity android:name="com.example.asteroides.Juego" android:label="@string/jugar" android:screenOrientation="landscape" android:theme="@android:style/Theme.NoTitleBar.Fullscreen"></activity>
        <activity android:name="com.example.asteroides.FinDelJuego" android:label="@string/fin"></activity>
        
        <!-- <service android:name=".ServicioMusica" /> -->
       
        
    </application>

</manifest>